<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/con_buju"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:background="@color/colorWhite"
       android:paddingBottom="10dp"
       >
       <TextView
           android:id="@+id/text_dian"
           android:layout_width="6dp"
           android:layout_height="6dp"
           android:background="@drawable/shape_mine_notice_status_num"
           android:visibility="visible"
           android:gravity="center"
           app:layout_constraintTop_toTopOf="@+id/text_biaoti"
           app:layout_constraintBottom_toBottomOf="@+id/text_biaoti"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/text_biaoti"
           />
       <TextView
           android:id="@+id/text_biaoti"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="关于顶用APP旧版本的通知"
           android:textColor="@color/hei"
           app:layout_constraintStart_toStartOf="@+id/img_tupian"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="10dp"
           />
       <TextView
           android:id="@+id/text_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="5月20号"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="@+id/text_biaoti"
           android:layout_marginRight="20dp"
           />
      <ImageView
          android:id="@+id/img_tupian"
          android:layout_width="60dp"
          android:layout_height="60dp"
          tools:src="@mipmap/ic_launcher"
          app:layout_constraintTop_toBottomOf="@+id/text_biaoti"
          app:layout_constraintStart_toStartOf="parent"
          android:paddingRight="5dp"
          android:scaleType="centerCrop"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          />

       <TextView
           android:id="@+id/text_neirong"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="尊敬的用户：为提供更加优质、高效的服务和更顺畅的用户体验"
           app:layout_constraintLeft_toRightOf="@+id/img_tupian"
           app:layout_constraintTop_toTopOf="@+id/img_tupian"
           app:layout_constraintRight_toLeftOf="@+id/text_time"
           android:maxLines="3"
           android:ellipsize="end"
           android:textColor="@color/hei"
           android:layout_marginLeft="10dp"
           android:textSize="12sp"
           />
          <TextView
              android:id="@+id/text_qian"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="商城公告"
              android:textColor="@color/hei"
              app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
              app:layout_constraintStart_toEndOf="@+id/img_tupian"
              android:layout_marginLeft="10dp"
              android:textSize="12sp"
              />
       <ImageView
           android:id="@+id/img_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/youjiantou"
           app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginRight="20dp"
           />


     </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>


