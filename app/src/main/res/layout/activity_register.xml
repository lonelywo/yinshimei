<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_title"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/image_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录注册"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/icon_back"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_zhongjian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/con_title"
        android:layout_marginTop="24dp"

        android:background="@color/colorWhite"
    >

        <TextView
            android:id="@+id/text_suosu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="所属国家"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@+id/viem_line"
            />
        <TextView
            android:id="@+id/text_guojia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_suosu"
            android:text="中国 大陆"
            android:textSize="15sp"
            android:layout_marginLeft="24dp"
            app:layout_constraintEnd_toEndOf="@+id/img_youjiantou"
            app:layout_constraintBottom_toTopOf="@+id/viem_line"
            />
       <ImageView
           android:id="@+id/img_youjiantou"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/youjiantou"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="@+id/text_guojia"
           app:layout_constraintBottom_toBottomOf="@+id/text_guojia"
           android:layout_marginRight="20dp"
           />
        <View
            android:id="@+id/viem_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/img_youjiantou"
            android:layout_marginTop="24dp"
            />
        <com.cuci.enticement.widget.ClearEditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="15sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/viem_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_suosu"

            />
        <View
            android:id="@+id/viem_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/text_shoujihao"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/text_shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="手机号"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/viem_line"
            app:layout_constraintStart_toStartOf="parent"
            />
    <TextView
        android:id="@+id/text_yanzhengma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viem_line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        />

    <EditText
        android:id="@+id/edt_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:drawablePadding="4dp"
        android:hint="请输入验证码"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#C6C6C6"
        android:textSize="15sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_code"
        app:layout_constraintStart_toEndOf="@id/text_suosu"
        app:layout_constraintTop_toBottomOf="@+id/viem_line1"/>

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_sibian_bai_bg5"
        android:padding="6dp"
        android:text="获取验证码"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_code"
        app:layout_constraintEnd_toEndOf="@+id/view_line"
        app:layout_constraintTop_toTopOf="@+id/edt_code"/>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_code"
        android:layout_marginTop="10dp"
        />
        <TextView
            android:id="@+id/text_tuijianren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐人电话"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/edt_code_tuijian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:hint="请输入推荐人手机号（必填）"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="15sp"
            android:layout_marginLeft="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_suosu"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_sibian_huang_bg1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_code_tuijian"/>



</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>