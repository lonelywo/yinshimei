<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="750:500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/image_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推广佣金"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_back"
            app:layout_constraintBottom_toBottomOf="@id/image_back"
            />

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/icon_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/con_huang"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      app:layout_constraintTop_toBottomOf="@id/image_back"
      android:background="@color/orange"
      >
    <Button
        android:id="@+id/button_tixian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sibian_bai_bg5"
        android:text="提现"
        android:textColor="@color/orange"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />
   <TextView
       android:id="@+id/text_wenzi"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="推广佣金总收入"
       android:textSize="20sp"
       android:textColor="@color/colorWhite"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="30dp"
       />
      <TextView
          android:id="@+id/text_yongjing"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="24654.88"
          android:textSize="30sp"
          android:textColor="@color/colorWhite"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/text_wenzi"
          android:layout_marginTop="5dp"
          />
      <TextView
          android:id="@+id/text_wenzi1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已提现金额"
          android:textSize="20sp"
          android:textColor="@color/colorWhite"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="@+id/line"
          app:layout_constraintTop_toBottomOf="@+id/text_yongjing"

          />
      <TextView
          android:id="@+id/text_yitixian"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="24654.88"
          android:textSize="30sp"
          android:textColor="@color/colorWhite"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="@+id/line"
          app:layout_constraintTop_toBottomOf="@+id/text_wenzi1"
          android:layout_marginTop="5dp"
          />
    <View
        android:id="@+id/line"
        android:layout_width="0.5dp"
        android:layout_height="80dp"
        android:background="@color/line_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_yongjing"
        />
      <TextView
          android:id="@+id/text_wenzi2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="可提现金额"
          android:textSize="20sp"
          android:textColor="@color/colorWhite"
          app:layout_constraintLeft_toLeftOf="@+id/line"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/text_yongjing"

          />
      <TextView
          android:id="@+id/text_ketixian"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="24654.88"
          android:textSize="30sp"
          android:textColor="@color/colorWhite"
          app:layout_constraintLeft_toLeftOf="@+id/line"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/text_wenzi2"
          android:layout_marginTop="5dp"
          />
  </androidx.constraintlayout.widget.ConstraintLayout>

 <androidx.constraintlayout.widget.ConstraintLayout
     android:id="@+id/con_hui"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@+id/con_huang"
     android:padding="20dp"
     android:background="@color/black"
     >
 <TextView
     android:id="@+id/text_shanggeyue"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:text="上个月"
     android:drawablePadding="6dp"
     android:drawableLeft="@drawable/zuojiantou"
     />
    <TextView
        android:id="@+id/text_rqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:text="2019/08"
        />
     <ImageView
         android:id="@+id/img_xiajiantou"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintLeft_toRightOf="@id/text_rqi"
         app:layout_constraintTop_toTopOf="@id/text_rqi"
         app:layout_constraintBottom_toBottomOf="@+id/text_rqi"
         android:src="@drawable/xiajiantou"
         android:layout_marginLeft="15dp"
         />
     <ImageView
         android:id="@+id/img_shangjiantou"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintLeft_toRightOf="@id/img_xiajiantou"
         app:layout_constraintTop_toTopOf="@id/text_rqi"
         app:layout_constraintBottom_toBottomOf="@+id/text_rqi"
         android:src="@drawable/shangjiantou"
         android:layout_marginLeft="15dp"
         />

     <TextView
         android:id="@+id/text_xiageyue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:text="下个月"
         android:drawablePadding="6dp"
         android:drawableRight="@drawable/youjiantou"

         />
 </androidx.constraintlayout.widget.ConstraintLayout>

        <com.classic.common.MultipleStatusView
            android:id="@+id/status_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:emptyView="@layout/custom_empty_view"
            app:errorView="@layout/custom_error_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/con_hui"
            app:loadingView="@layout/custom_loading_view"
            app:noNetworkView="@layout/custom_no_network_view">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <androidx.recyclerview.widget.RecyclerView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"


                  />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.classic.common.MultipleStatusView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>