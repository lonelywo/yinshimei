<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/img_tuxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/tuxiang"
        />
     <TextView
          android:id="@+id/text_wenzi1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintLeft_toRightOf="@+id/img_tuxiang"
          app:layout_constraintTop_toTopOf="@+id/img_tuxiang"
         app:layout_constraintBottom_toBottomOf="@+id/img_tuxiang"
         android:text="美美"
         android:textSize="20sp"
         android:layout_marginBottom="20dp"
         android:layout_marginLeft="10dp"
         />
    <TextView
        android:id="@+id/text_wenzi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img_tuxiang"
        app:layout_constraintTop_toTopOf="@+id/img_tuxiang"
        app:layout_constraintBottom_toBottomOf="@+id/img_tuxiang"
        android:text="经销商直推"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
      <TextView
          android:id="@+id/text_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="@id/text_wenzi1"
          app:layout_constraintBottom_toBottomOf="@id/text_wenzi1"
          app:layout_constraintRight_toRightOf="parent"
          android:text="+1050"
          android:textSize="20sp"
          android:textColor="@color/orange"
          />
    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_wenzi2"
        app:layout_constraintBottom_toBottomOf="@id/text_wenzi2"
        app:layout_constraintRight_toRightOf="parent"
        android:text="2019-08-08 14:42:06"
        />
</androidx.constraintlayout.widget.ConstraintLayout>