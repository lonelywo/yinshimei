<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/con_toubu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@color/home_huang"
      >
    <TextView
        android:id="@+id/image_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单详情"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_back"
        app:layout_constraintBottom_toBottomOf="@id/image_back"
        />
    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:paddingRight="12dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/jiantou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

    <com.cuci.enticement.widget.SmoothScrollview
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/con_toubu"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
      >
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/con_zhuangtai"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          app:layout_constraintTop_toTopOf="parent"
          android:background="@color/home_huang"

          >

          <TextView
              android:id="@+id/text_zhuangtai"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="待支付"
              android:textColor="@color/colorWhite"
              android:textSize="18sp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginLeft="42dp"
              />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/baoguo_pro"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginRight="65dp"
           />

      </androidx.constraintlayout.widget.ConstraintLayout>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/con_buju1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/con_zhuangtai"
         android:background="@color/colorWhite"

         >
      <TextView
          android:id="@+id/text_dizi"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          tools:text="美美 15999995555\n广州市天河区富力盈盛2905广州市天河区富力盈盛2905"
          android:lineSpacingExtra="4dp"
          android:drawableLeft="@drawable/dizhi_pro"
          android:drawablePadding="5dp"
          android:textColor="@color/hei"
          android:textSize="13sp"
          android:maxLines="3"
          android:ellipsize="end"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:padding="10dp"

          />

         <View
             android:id="@+id/line"
             android:layout_width="match_parent"
             android:layout_height="10dp"
             android:background="#F2F2F2"
             app:layout_constraintTop_toBottomOf="@+id/text_dizi"
             />
          <TextView
              android:id="@+id/tv_order_no"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/line"
              app:layout_constraintStart_toStartOf="parent"
              tools:text="订单编号: 662645193409"
              android:textColor="@color/hei"
              android:padding="10dp"
              android:textSize="13sp"
              />
         <TextView
             android:id="@+id/tv_fuzhi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="复制"
             android:textSize="13sp"
             android:background="@drawable/shape_myorder_title_fuzhi"
             android:layout_marginLeft="5dp"
             app:layout_constraintTop_toBottomOf="@+id/line"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@+id/tv_order_no"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             />

     </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/con_buju1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2"
        app:layout_constraintTop_toBottomOf="@id/recycler_view"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_buju3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:padding="10dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="兑换时间"
            android:textSize="12sp"
            android:textColor="#707070"
            />
        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2019-07-09 12:06:33"
            android:textColor="#707070"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_time"
            android:text="商品总价"
            android:textColor="#707070"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_goods_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="3850"
            android:textColor="#707070"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_money"
            android:text="运费（顺丰快递）"
            android:textColor="#707070"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="50"
            android:textColor="#707070"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_money"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            app:layout_constraintTop_toBottomOf="@id/con_buju3"
            />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/line3"
    android:background="@color/colorWhite"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/tv_shifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="实付(积分)"
        android:textColor="@color/hei"
        />
    <TextView
        android:id="@+id/tv_total_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3900"
        android:textColor="@color/home_huang"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.cuci.enticement.widget.SmoothScrollview>

</androidx.constraintlayout.widget.ConstraintLayout>