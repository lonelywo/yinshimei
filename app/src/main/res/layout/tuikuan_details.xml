<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EFEFEF"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/con_toubu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@color/home_huang"
      >
    <TextView
        android:id="@+id/image_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款详情"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_back"
        app:layout_constraintBottom_toBottomOf="@id/image_back"
        />
    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:paddingRight="12dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/jiantou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/con_zhuangtai"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:background="@color/home_huang"
          app:layout_constraintTop_toBottomOf="@+id/con_toubu"
          >

          <TextView
              android:id="@+id/text_zhuangtai"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="请退货并填写物流信息"
              android:textColor="@color/colorWhite"
              android:textSize="18sp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginLeft="42dp"
              />
          <TextView
              android:id="@+id/text_time"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="还剩6天3小时59分"
              android:textColor="@color/colorWhite"
              android:textSize="12sp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/text_zhuangtai"
              android:layout_marginLeft="42dp"
              />

      </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_money"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/con_zhuangtai"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款总金额"
            android:textColor="@color/hei"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="58.00"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="15dp"
            />
        <View
            android:id="@+id/line_money"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_money"
            android:background="@color/line_gray"
            android:layout_marginTop="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_zhuyi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/con_zhuangtai"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_zhuyi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:text="您已成功发起退款申请，请耐心等待平台处理。"
                android:textColor="@color/hei"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/zhuyi"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_wuliuxianshi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/con_zhuangtai"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_wuliu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流公司"
                android:textColor="@color/hei"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="42dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />
            <TextView
                android:id="@+id/tv_gongsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="顺丰物流"
                android:textColor="#626262"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_wuliu"
                android:layout_marginLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_wuliu"
                android:background="@color/line_gray"
                />

            <TextView
                android:id="@+id/tv_yundan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运单编号"
                android:textColor="@color/hei"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="42dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />
            <TextView
                android:id="@+id/tv_bianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4654679879846131"
                android:textColor="#626262"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                app:layout_constraintStart_toEndOf="@+id/tv_yundan"
                android:layout_marginLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_yundan"
                android:background="@color/line_gray"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/con_wuliutianxiebuju"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/con_zhuangtai"
       android:layout_marginTop="10dp"
       android:visibility="gone"
       >

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/con_buju1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:background="@color/colorWhite"

         >
       <TextView
           android:id="@+id/tv_biaoti"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="平台已同意退货申请，请尽早发货"
           android:textColor="@color/hei"
           android:textSize="14sp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           />
      <TextView
          android:id="@+id/text_dizi"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="收货地址：因诗美 159 8871 4266\n广东省 广州市 白云区 鹤边细彭玲路29号远发百货"
          android:lineSpacingExtra="4dp"
          android:drawableLeft="@drawable/dizhi_pro"
          android:drawablePadding="5dp"
          android:textColor="@color/hei"
          android:textSize="12sp"
          android:maxLines="3"
          android:ellipsize="end"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_biaoti"
          android:padding="10dp"

          />

         <View
             android:id="@+id/line"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#F2F2F2"
             app:layout_constraintTop_toBottomOf="@+id/text_dizi"
             android:layout_marginTop="@dimen/dp_10"
             />

     </androidx.constraintlayout.widget.ConstraintLayout>




<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/con_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/con_buju1"
    android:background="@color/colorWhite"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/tv_biaoti2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="退货说明"
        android:textColor="@color/hei"
        />

       <TextView
           android:id="@+id/tv_content_desc"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/tv_biaoti2"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:text="请您勿使用到付或平邮，且保证商品完好，以免产生拒签哦。
为保障退款进度，退货时请您务必填写真实物流单号，并选择以下任意快递寄回：申通快递、中通快递、圆通快递、韵达快递、联邦快递 、百世快递、邮政、德邦快递、EMS、宅急送、优速快递。...展开全部"
           android:textColor="#707070"
           android:layout_marginTop="10dp"
           />

</androidx.constraintlayout.widget.ConstraintLayout>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/con_dibu1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         app:layout_constraintTop_toBottomOf="@+id/con_desc"
         android:background="@color/white"
         android:padding="@dimen/dp_10"
         >
         <TextView
             android:id="@+id/text_wuliudanhao"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="物流单号："
             android:textColor="@color/hei"
             android:textSize="14sp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             />

         <EditText
             android:id="@+id/edt_wuliudanhao"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:background="@null"
             android:hint="填写物流单号"
             android:inputType="number"
             android:singleLine="true"
             android:textColor="#707070"
             android:textColorHint="#707070"
             android:textSize="14sp"
             android:layout_marginLeft="10dp"
             app:layout_constraintEnd_toStartOf="@+id/tv_code"
             app:layout_constraintStart_toEndOf="@id/text_wuliudanhao"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintTop_toBottomOf="parent"
             />

         <ImageView
             android:id="@+id/tv_code"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:src="@drawable/saomiao"
             android:visibility="gone"
             />
     </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_wuliugongsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/con_dibu1"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流公司"
                android:textColor="@color/hei"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_wuliucheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择物流公司"
                android:textColor="#707070"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableRight="@drawable/youjiantou_hei"
                android:drawablePadding="6dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/con_wuliugongsi"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textColor="@color/hei"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="填写联系电话"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#707070"
                android:textColorHint="#707070"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:maxLength="11"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_phone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_cexiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="撤销申请"
            android:background="@color/hei"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="20dp"
            />
        <TextView
            android:id="@+id/tv_kefu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#ffffff"
            android:text="联系客服"
            android:background="@color/home_huang"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="20dp"
            />
    </LinearLayout>


        <TextView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#ffffff"
            android:text="提交"
            android:background="@color/home_huang"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone"
            />
       <TextView
        android:id="@+id/tv_kefu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#ffffff"
        android:text="联系客服"
        android:background="@color/home_huang"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>