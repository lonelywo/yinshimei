<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
   <LinearLayout
       android:id="@+id/ll_con"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/dp_6"
       android:layout_marginRight="@dimen/dp_6"
       android:paddingBottom="6dp"
       >
       <androidx.cardview.widget.CardView
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           app:cardCornerRadius="4dp"
           app:cardElevation="0dp"
           android:layout_marginRight="3dp"
           >
   <ImageView
       android:id="@+id/img_onclick1"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_height="90dp"
       android:src="@drawable/lingquanzhongxin"
       android:scaleType="centerCrop"


       />
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           app:cardCornerRadius="4dp"
           app:cardElevation="0dp"
           android:layout_marginLeft="3dp"
           >
       <ImageView
           android:id="@+id/img_onclick2"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="match_parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_height="90dp"
           android:src="@drawable/lingquanzhongxin"
           android:scaleType="centerCrop"
           />
       </androidx.cardview.widget.CardView>
   </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="355:100"
        app:layout_constraintTop_toBottomOf="@+id/ll_con"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="3dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            >
            <ImageView
                android:id="@+id/img_onclick3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="match_parent"
                android:src="@drawable/lingquanzhongxin"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


