<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_toubu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_hei"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/text_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享好友"
            android:textColor="@color/hei"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


       <!-- <com.cuci.enticement.widget.GalleryViewPager
            android:id="@+id/view_pager"
            android:layout_width="240dp"
            android:layout_height="430dp"
            android:clipChildren="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/con_toubu"
            app:layout_constraintBottom_toTopOf="@+id/ll_tupian"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_img0"
            android:layout_width="750px"
            android:layout_height="1334px"
            android:layout_marginStart="8px"
            android:layout_marginTop="8px"
            android:layout_marginEnd="8px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/img_tupian0"
                android:layout_width="750px"
                android:layout_height="1334px"
                tools:src="@drawable/poster"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/text_name0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="皮蛋君"
                android:textSize="30px"
                android:textColor="@color/hei"
                app:layout_constraintBottom_toBottomOf="@+id/img_tupian0"
                app:layout_constraintLeft_toLeftOf="@+id/img_tupian0"
                android:layout_marginBottom="160px"
                android:layout_marginLeft="70px"
                />
            <ImageView
                android:id="@+id/qrcode0"
                android:layout_width="155px"
                android:layout_height="155px"
                tools:src="@drawable/tuxiang"
                app:layout_constraintBottom_toBottomOf="@+id/img_tupian0"
                app:layout_constraintRight_toRightOf="@+id/img_tupian0"
                android:scaleType="centerCrop"
                android:layout_marginRight="57px"
                android:layout_marginBottom="43px"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_img"
            android:layout_width="720px"
            android:layout_height="1280px"
            app:layout_constraintTop_toBottomOf="@+id/con_toubu"
            app:layout_constraintBottom_toTopOf="@+id/ll_tupian"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageView
                android:id="@+id/img_tupian"
                android:layout_width="720px"
                android:layout_height="1280px"
                tools:src="@drawable/poster"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="皮蛋君"
                android:textSize="12sp"
                android:textColor="@color/hei"
                app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
                app:layout_constraintLeft_toLeftOf="@+id/img_tupian"
                android:layout_marginBottom="160px"
                android:layout_marginLeft="70px"
                />
            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="155px"
                android:layout_height="155px"
                tools:src="@drawable/tuxiang"
                app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
                app:layout_constraintRight_toRightOf="@+id/img_tupian"
                android:scaleType="centerCrop"
                android:layout_marginRight="50px"
                android:layout_marginBottom="38px"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
  <ImageView
      android:id="@+id/img_jia"
      android:layout_width="240dp"
      android:layout_height="420dp"
      app:layout_constraintTop_toBottomOf="@+id/con_toubu"
      app:layout_constraintBottom_toTopOf="@+id/ll_tupian"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:src="@drawable/poster"
      android:scaleType="fitXY"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:visibility="gone"
      />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/ll_tupian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/tv_share_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_share_wx"
                android:drawablePadding="6dp"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="#666666"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_share_moment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_share_moment"
                android:drawablePadding="6dp"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textColor="#666666"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/icon_share_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_share_save"
                android:drawablePadding="6dp"
                android:gravity="center_horizontal"
                android:text="保存"
                android:textColor="#666666"
                android:textSize="12sp"/>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>