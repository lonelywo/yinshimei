<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_title"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/icon_back"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_zhongjian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/con_title"
        android:layout_marginTop="24dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:id="@+id/image_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机号"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_marginLeft="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.cuci.enticement.widget.ClearEditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="16sp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
           app:layout_constraintTop_toBottomOf="@+id/image_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_shoujihao"

            />
        <View
            android:id="@+id/viem_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/text_shoujihao"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/text_shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="+86"
            android:drawablePadding="3dp"
            android:textColor="@color/hei"
            android:drawableRight="@drawable/jiantou_quhao"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@+id/image_top"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="4dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="16sp"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@+id/viem_line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_code"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_sibian_bai_bg5"
            android:padding="6dp"
            android:text="获取验证码"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_code"
            app:layout_constraintEnd_toEndOf="@+id/view_line"
            app:layout_constraintTop_toTopOf="@+id/edt_code"/>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/tv_code"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_tuijianren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐人电话"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/edt_code_tuijian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:hint="推荐人手机号（选填）"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="16sp"
            android:layout_marginLeft="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_shoujihao"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_sibian_huang_bg1"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="绑定"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_code_tuijian"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>