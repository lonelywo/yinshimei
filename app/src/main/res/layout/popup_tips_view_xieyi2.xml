<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_sibian_bai_bg6"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <TextView
      android:id="@+id/text_xieyi"
      android:layout_width="0dp"
      android:layout_height="65dp"
      android:text="用户服务协议"
      android:textSize="25sp"
      android:textColor="@color/hei"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:padding="10dp"
      android:gravity="center"
      />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/text_xieyi"
        />
  <com.tencent.smtt.sdk.WebView
      android:id="@+id/web_context"
      android:layout_width="match_parent"
      android:layout_height="450dp"
      app:layout_constraintTop_toBottomOf="@+id/line1"
      android:paddingLeft="@dimen/dp_10"
      android:paddingRight="@dimen/dp_10"
      />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/web_context"
        />
    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="我知道了"
        android:textSize="20sp"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"/>


</androidx.constraintlayout.widget.ConstraintLayout>