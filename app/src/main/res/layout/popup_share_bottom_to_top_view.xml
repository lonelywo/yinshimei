<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="20dp">

        >
        <ImageView
            android:id="@+id/img_tuxiang"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintLeft_toLeftOf="@+id/container"
            app:layout_constraintTop_toTopOf="@+id/container"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            />
         <ImageView
             android:id="@+id/img_guanbi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:src="@drawable/ic_clean_off"
             android:padding="5dp"
             android:visibility="gone"
             />
        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价"
            android:textColor="@color/hei"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/img_tuxiang"
            app:layout_constraintLeft_toRightOf="@+id/img_tuxiang"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/text_home_money_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员价"
        android:textColor="@color/orange"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/img_tuxiang"
        app:layout_constraintLeft_toRightOf="@+id/text_money"
        android:layout_marginLeft="10dp"
        />
        <TextView
            android:id="@+id/stock_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存10000件"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/text_money"
            app:layout_constraintLeft_toRightOf="@+id/img_tuxiang"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/selected_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/stock_tv"
            app:layout_constraintLeft_toLeftOf="@+id/stock_tv"
            app:layout_constraintRight_toRightOf="@+id/tv_commit"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="已选黑金魅惑蕾丝面膜5片"
            android:textColor="@color/hei"
            android:layout_marginTop="8dp"
            />

        <LinearLayout
          android:id="@+id/sku_ll"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintTop_toBottomOf="@+id/img_tuxiang"
          app:layout_constraintLeft_toLeftOf="@+id/img_tuxiang"
          app:layout_constraintRight_toRightOf="@+id/tv_commit"
          android:layout_marginTop="10dp"
          >
        <TextView
            android:id="@+id/text_fenzu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认分组"
            android:textSize="15sp"
            android:textColor="#000000"
            />
                <RadioGroup
                  android:id="@+id/rgp_button"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="8dp"
                  />
        </LinearLayout>


        <LinearLayout
          android:id="@+id/sku2_ll"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintTop_toBottomOf="@+id/sku_ll"
          app:layout_constraintLeft_toLeftOf="@+id/img_tuxiang"
          app:layout_constraintRight_toRightOf="@+id/tv_commit"
          android:layout_marginTop="8dp"
          >
                <TextView
                  android:id="@+id/text_fenzu2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/img_tuxiang"
                  app:layout_constraintLeft_toLeftOf="@+id/img_tuxiang"
                  android:text="T恤"
                  android:textSize="15sp"
                  android:textColor="#000000"
                  />
                <RadioGroup
                  android:id="@+id/txu_rgp_button"
                  app:layout_constraintTop_toBottomOf="@+id/rgp_button"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:orientation="horizontal"
                  />


        </LinearLayout>

