                android:button="@null"
                />-->

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/sku2_ll"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/text_shuliang"
            app:layout_constraintLeft_toLeftOf="@+id/img_tuxiang"
           app:layout_constraintTop_toTopOf="@+id/con_jiajian"
            app:layout_constraintBottom_toBottomOf="@+id/con_jiajian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_jiajian"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_sibian_bai_bg7_jiajian"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            >

                <ImageView
                    android:id="@+id/img_jia"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jia"
                    android:padding="10dp"

                    />
                <View
                    android:id="@+id/line1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_login_edit_bottom_line"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/img_jia"

                    />

                <TextView
                    android:id="@+id/text_shuzi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/line2"
                    app:layout_constraintRight_toRightOf="@id/line1"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:id="@+id/line2"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_login_edit_bottom_line"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/img_jian"
                    />
                <ImageView
                    android:id="@+id/img_jian"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jian"
                    android:padding="10dp"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/tv_commit"
            app:layout_constraintTop_toBottomOf="@+id/text_shuliang"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/shape_sibian_huang_bg1"
            />




</androidx.constraintlayout.widget.ConstraintLayout>