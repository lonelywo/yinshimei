<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

   <TextView
       android:id="@+id/img_shoutu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="登录后继续操作"
       android:textColor="@color/hei"
       android:textSize="30sp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginLeft="24dp"
       android:layout_marginTop="100dp"

       />
    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:paddingRight="12dp"
        android:paddingBottom="16dp"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        />
    <!--<TextView
        android:id="@+id/text_suosu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="国家/地区"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/img_shoutu"
        />
    <TextView
        android:id="@+id/text_guojia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/text_suosu"
        android:text="中国 大陆"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_suosu"
        app:layout_constraintEnd_toEndOf="@+id/img_youjiantou"
        android:gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/img_youjiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/youjiantou"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/text_guojia"
        app:layout_constraintTop_toTopOf="@+id/text_guojia"
        android:layout_marginRight="24dp"
        />
    <View
        android:id="@+id/view_zeng"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/img_shoutu"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />-->


        <com.cuci.enticement.widget.ClearEditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_shoujihao"
            app:layout_constraintEnd_toEndOf="@+id/view_zeng1"
            app:layout_constraintStart_toEndOf="@+id/text_shoujihao"
            app:layout_constraintTop_toTopOf="@+id/text_shoujihao"
            />
    <View
        android:id="@+id/view_zeng1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
         android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/edt_phone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
            android:id="@+id/text_shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="+86"
            android:drawablePadding="3dp"
            android:textColor="@color/hei"
            android:drawableRight="@drawable/jiantou_quhao"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/img_shoutu"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            />
    <EditText
        android:id="@+id/edt_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawablePadding="4dp"
        android:hint="请输入验证码"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#C6C6C6"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/view_zeng1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_code"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_sibian_bai_bg5"
        android:padding="6dp"
        android:text="获取验证码"
        android:textColor="@color/home_huang"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_code"
        app:layout_constraintEnd_toEndOf="@+id/view_line"
        app:layout_constraintTop_toTopOf="@+id/edt_code"/>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_code"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />
    <TextView
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_sibian_huang_bg1"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_code"/>
    <TextView
        android:id="@+id/text_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未注册用户手机号验证后自动创建帐户"
        android:textColor="#959595"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ok"
        android:padding="20dp"
        />

  <LinearLayout
      android:id="@+id/con_dibu"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:orientation="horizontal"
      android:gravity="center"
      android:paddingBottom="30dp"
      >

      <TextView
          android:id="@+id/text_dibuwenzi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="登录注册代表您已同意"
          android:textColor="#959595"
          android:textSize="12sp"
          app:layout_constraintTop_toTopOf="@+id/checkbox"
          app:layout_constraintBottom_toBottomOf="@+id/checkbox"
          app:layout_constraintLeft_toRightOf="@+id/checkbox"
          android:layout_gravity="center"
          />
      <TextView
          android:id="@+id/text_dibuwenzi1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="《用户服务协议》"
          android:textColor="@color/home_huang"
          android:textSize="12sp"
          app:layout_constraintTop_toTopOf="@+id/checkbox"
          app:layout_constraintBottom_toBottomOf="@+id/checkbox"
          app:layout_constraintLeft_toRightOf="@+id/text_dibuwenzi"
          android:layout_gravity="center"
          />
      <TextView
          android:id="@+id/text_dibuwenzi2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="和"
          android:textColor="#959595"
          android:textSize="12sp"
          app:layout_constraintTop_toTopOf="@+id/checkbox"
          app:layout_constraintBottom_toBottomOf="@+id/checkbox"
          app:layout_constraintLeft_toRightOf="@+id/text_dibuwenzi1"
          android:layout_gravity="center"
          />
      <TextView
          android:id="@+id/text_dibuwenzi3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="《隐私政策》"
          android:textColor="@color/home_huang"
          android:textSize="12sp"
          app:layout_constraintTop_toTopOf="@+id/checkbox"
          app:layout_constraintBottom_toBottomOf="@+id/checkbox"
          app:layout_constraintLeft_toRightOf="@+id/text_dibuwenzi2"
          android:layout_gravity="center"
          />
  </LinearLayout>

        <ImageView
            android:id="@+id/weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixin"
            android:background="@drawable/shape_login_weixin"
            app:layout_constraintBottom_toTopOf="@+id/con_dibu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            />

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toTopOf="@+id/weixin"
           android:padding="24dp"
           >
           <View
               android:layout_width="0dp"
               android:layout_height="0.5dp"
               android:background="@drawable/shape_login_edit_bottom_line"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@+id/text_weixindenglu"
               app:layout_constraintTop_toTopOf="parent"
               />

           <TextView
               android:id="@+id/text_weixindenglu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:text="其它登录方式"
               android:textColor="#959595"
               android:textSize="12sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />
           <View
               android:layout_width="0dp"
               android:layout_height="0.5dp"
               android:background="@drawable/shape_login_edit_bottom_line"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@+id/text_weixindenglu"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>