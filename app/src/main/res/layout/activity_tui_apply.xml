<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_toubu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请退款"
            android:textColor="@color/hei"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_buju"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/con_toubu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/img_tupian"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintDimensionRatio="1:1"
            tools:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingRight="5dp"
            />

        <TextView
            android:id="@+id/text_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新零售礼包A方案"
            android:textColor="@color/hei"
            app:layout_constraintStart_toEndOf="@+id/img_tupian"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="6dp"
            />

        <TextView
            android:id="@+id/text_neirong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="@+id/text_biaoti"
            app:layout_constraintTop_toTopOf="@id/img_tupian"
            app:layout_constraintBottom_toBottomOf="@id/img_tupian"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/orange"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
            app:layout_constraintStart_toStartOf="@+id/text_biaoti"
            />
        <TextView
            android:id="@+id/text_qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3600"
            android:textSize="16sp"
            android:layout_marginStart="1dp"
            android:textColor="@color/orange"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
            app:layout_constraintStart_toEndOf="@id/tv"
            />

        <TextView
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="x1"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"

            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_tuikuan1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/con_buju"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        >
    <TextView
        android:id="@+id/img_tuxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       android:text="货物状态"
        android:textColor="@color/hei"
        android:layout_marginLeft="10dp"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_tuxiang"
        app:layout_constraintBottom_toBottomOf="@+id/img_tuxiang"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/youjiantou"
            android:text="请选择"
        android:drawablePadding="5dp"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/con_tuikuan1"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_tuikuan2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:background="@color/colorWhite"
        >
        <TextView
            android:id="@+id/img_tuxiang1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="退款原因"
            android:textColor="@color/hei"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/img_tuxiang1"
            app:layout_constraintBottom_toBottomOf="@+id/img_tuxiang1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/youjiantou"
            android:text="请选择"
            android:drawablePadding="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_xuantian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_tuikuan2"
        android:padding="10dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:id="@+id/text_wenzi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="退款金额：3850"
            android:textColor="@color/hei"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/text_wenzi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_wenzi1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="退款说明："
            android:textColor="@color/hei"
            android:layout_marginTop="5dp"
            />
        <com.cuci.enticement.widget.ClearEditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="选填"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/text_wenzi2"
            app:layout_constraintTop_toTopOf="@+id/text_wenzi2"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/con_xuantian"
        >
    <TextView
        android:id="@+id/text_pingzheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传凭证"
        android:textColor="@color/hei"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/text_pingzheng"
            app:layout_constraintBottom_toTopOf="@+id/ok"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_sibian_huang_bg1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>