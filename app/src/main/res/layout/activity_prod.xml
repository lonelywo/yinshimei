<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cuci.enticement.plate.home.activity.ProdActivity">

<com.cuci.enticement.widget.SmoothScrollview
    android:id="@+id/scroll_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/con_toubu"
    app:layout_constraintEnd_toEndOf="parent"

    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:descendantFocusability="blocksDescendants"
    >
      <com.youth.banner.Banner
          android:id="@+id/banner"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:delay_time="3000"
          app:image_scale_type="fit_xy"
          app:indicator_height="6dp"
          app:indicator_margin="3dp"
          app:indicator_width="6dp"
          app:is_auto_play="false"
          app:layout_constraintDimensionRatio="530:584"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent" />



  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/con_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@+id/banner"
      android:padding="10dp"
      android:background="@color/white"
      >

      <TextView
          android:id="@+id/text_jiage_vip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          android:layout_marginTop="10dp"
          tools:text="会员价"
          android:textSize="12sp"
          android:textColor="@color/home_huang"
          app:layout_constraintTop_toTopOf="parent"
          />
      <TextView
          android:id="@+id/text_jiage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          tools:text="原价"
          android:textSize="12sp"
          android:textColor="#9F9F9F"
          app:layout_constraintTop_toTopOf="@+id/text_jiage_vip"
          app:layout_constraintBottom_toBottomOf="@+id/text_jiage_vip"
          android:layout_marginLeft="10dp"
          app:layout_constraintLeft_toRightOf="@+id/text_jiage_vip"
          android:layout_marginBottom="6dp"
          />
      <TextView
          android:id="@+id/home_detail_goodsname"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/img_share"
          android:text="黑色魅惑蕾丝面膜"
          android:textSize="15sp"
          android:textColor="#000000"
          app:layout_constraintTop_toBottomOf="@id/text_jiage"
          android:layout_marginTop="14dp"
          />
      <TextView
          android:id="@+id/home_detail_goodsname_little"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/img_share"
          tools:text="深层补水，修护肌肤，舒缓镇静，被誉为面膜界的爱马仕"
          android:textSize="10sp"
          android:textColor="#666666"
          app:layout_constraintTop_toBottomOf="@id/home_detail_goodsname"
          android:layout_marginTop="8dp"
          />
    <TextView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_jiage"
        app:layout_constraintBottom_toBottomOf="@+id/text_jiage"
        android:text="分享"
        android:drawableLeft="@drawable/share_qd"
        android:background="@drawable/shape_xq_fenxiang_bg"
        android:textSize="13sp"
        android:textColor="@color/home_huang"
        android:visibility="visible"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawablePadding="2dp"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/con_kuaidi"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/con_info"
      android:background="@color/white"
      android:layout_marginTop="10dp"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
      >
      <TextView
          android:id="@+id/text_tuijian"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:text="快递:"
          android:textSize="13sp"
          android:textColor="#666666"
          android:layout_marginLeft="10dp"
          android:includeFontPadding="false"
          />
      <TextView
          android:id="@+id/text_tuijian2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:text="免运费"
          android:textSize="13sp"
          android:textColor="#666666"
          android:layout_marginLeft="50dp"
          android:includeFontPadding="false"
          />
      <TextView
          android:id="@+id/text_xiaoliang"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="销量5W+"
          android:textSize="13dp"
          android:textColor="#333333"
          android:includeFontPadding="false"
          />
      <TextView
          android:id="@+id/text_dizi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:text="广东"
          android:drawableLeft="@drawable/location"
          android:drawablePadding="2dp"
          android:textSize="13sp"
          android:textColor="#666666"
          android:layout_marginRight="10dp"
          android:gravity="center"
          android:includeFontPadding="false"
          />
  </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/con_fuwu"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/con_kuaidi"
          android:background="@color/white"
          android:layout_marginTop="10dp"
          android:paddingTop="15dp"
          android:paddingBottom="15dp"
          >
          <TextView
              android:id="@+id/tv_fuwu"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:text="服务"
              android:textSize="13sp"
              android:textColor="#666666"
              android:layout_marginLeft="10dp"
              android:includeFontPadding="false"
              />

          <TextView
              android:id="@+id/tv_zhengping"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:text="官方正品"
              android:textSize="13sp"
              android:textColor="#666666"
              android:layout_marginLeft="50dp"
              android:drawableLeft="@drawable/bigo"
              android:includeFontPadding="false"
              />

          <TextView
              android:id="@+id/tv_qitian"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toRightOf="@+id/tv_zhengping"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:text="7天无忧退换"
              android:textSize="13dp"
              android:textColor="#666666"
              android:drawableLeft="@drawable/bigo"
              android:layout_marginLeft="20dp"
              android:includeFontPadding="false"
              />
          <TextView

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toRightOf="@+id/tv_qitian"
              app:layout_constraintBottom_toBottomOf="parent"
              android:text="顺丰包邮"
              android:drawableLeft="@drawable/bigo"
              android:drawablePadding="2dp"
              android:textSize="13sp"
              android:textColor="#666666"
              android:layout_marginRight="10dp"
              android:gravity="center"
              android:layout_marginLeft="20dp"
              android:includeFontPadding="false"
              />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <View
          android:id="@+id/view_xian"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          android:background="#EFEFEF"
          app:layout_constraintTop_toBottomOf="@+id/con_fuwu"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          />
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/con_huodong"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/view_xian"
          android:background="@color/white"
          android:visibility="gone"
          android:paddingTop="15dp"
          android:paddingBottom="15dp"
          >
          <TextView

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:text="活动"
              android:textSize="13sp"
              android:textColor="#666666"
              android:layout_marginLeft="10dp"
              android:includeFontPadding="false"
              />

          <TextView
              android:id="@+id/tv_youli"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:text="下单有礼"
              android:textSize="13sp"
              android:textColor="#EA333F"
              android:layout_marginLeft="50dp"
              android:drawableLeft="@drawable/gift"
              android:drawablePadding="2dp"
              android:includeFontPadding="false"
              />
          <TextView
              android:id="@+id/tv_huodong_ms"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              tools:text="此商品单笔买满三盒可得黑金手提袋*1"
              android:textSize="13sp"
              android:textColor="#666666"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
             app:layout_constraintStart_toEndOf="@+id/tv_youli"
              app:layout_constraintEnd_toEndOf="parent"
              android:includeFontPadding="false"
              />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/con_youhuiquan"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/con_huodong"
          android:background="@drawable/shape_xq_yhq_bg"
          android:layout_margin="10dp"
          android:visibility="gone"
          >
         <TextView
             android:id="@+id/tv_coupon_desc"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:text="宠粉大礼包代金券"
             android:padding="15dp"
             app:layout_constraintEnd_toStartOf="@+id/tv_lingquan"
             />

          <TextView
              android:id="@+id/tv_lingquan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_xq_yhq_lq_bg"
              android:drawableRight="@drawable/youjiantou"
              android:text="领券"
              android:textColor="#7d7d7d"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:paddingLeft="30dp"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:paddingRight="10dp"
              android:drawablePadding="2dp"
              />
      </androidx.constraintlayout.widget.ConstraintLayout>



   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/con_xq_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/con_youhuiquan"
       android:background="@color/white"
       android:layout_marginTop="10dp"
       android:paddingTop="15dp"
       android:paddingBottom="15dp"
       >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:text="商品详情"
         android:textSize="16sp"
         android:textColor="#333333"
         />

   </androidx.constraintlayout.widget.ConstraintLayout>
      <com.tencent.smtt.sdk.WebView
      android:id="@+id/web_details"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/con_xq_title"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>
</com.cuci.enticement.widget.SmoothScrollview>

<LinearLayout
    android:id="@+id/ll_dibu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:visibility="gone"
  >
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_gravity="center"
       android:background="@color/white"
       >
    <TextView
        android:id="@+id/tv_kefu"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="客服"
        android:textColor="#313131"
        android:drawableTop="@drawable/xiaoxi"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        />
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           >
           <TextView
               android:id="@+id/iv_cart"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text="购物车"
               android:textColor="#313131"
               android:drawableTop="@drawable/gouwuche"
               android:gravity="center_horizontal"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:paddingTop="5dp"

               />
           <TextView
               android:id="@+id/cart_num_tv"
               android:layout_width="16dp"
               android:layout_height="16dp"
               android:background="@drawable/shape_pro_cart_status_num"
               tools:text="3"
               android:gravity="center"
               android:textSize="11sp"
               android:visibility="gone"
               android:textColor="@color/white"
               app:layout_constraintTop_toTopOf="@+id/iv_cart"
               app:layout_constraintEnd_toEndOf="@+id/iv_cart"
               android:layout_marginRight="10dp"
               />

       </androidx.constraintlayout.widget.ConstraintLayout>


   </LinearLayout>
  <TextView
      android:id="@+id/text_cart"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:textColor="#ffffff"
      android:text="加入购物车"
      android:gravity="center"
      android:background="#000000"
      android:padding="15dp"
      />
  <TextView
      android:id="@+id/text_buy"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:textColor="#ffffff"
      android:text="立即购买"
      android:gravity="center"
      android:background="@color/home_huang"
      android:padding="15dp"
      />

</LinearLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/con_toubu"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    app:layout_constraintTop_toTopOf="parent"
    android:fitsSystemWindows="true"
    >
  <TextView
    android:id="@+id/image_top"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:text="商品详情"
    android:textColor="@color/white"
    android:textSize="17sp"
    android:gravity="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:visibility="gone"
    />
  <ImageView
    android:id="@+id/image_back"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:background="?attr/selectableItemBackground"
    android:padding="5dp"
    android:src="@drawable/jiantou"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginLeft="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    />
    <ImageView
        android:id="@+id/image_fenxiang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@drawable/fenxiang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_xiajiabuju"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d9c2a8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
    >
        <TextView
            android:id="@+id/text_xiajia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#c81623"
            tools:text="该商品暂未上架，非常抱歉"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:padding="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
