<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    >


  <TextView
      android:id="@+id/text_bianhao"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="订单编号：668114055490"
      android:textColor="@color/hei"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/text_zhuangtai"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="已取消"
      android:textColor="@color/orange"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/con_buju"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/text_zhuangtai"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:padding="20dp"
       >
      <ImageView
          android:id="@+id/img_tupian"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_launcher"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:paddingRight="5dp"
          />

         <TextView
             android:id="@+id/text_biaoti"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="新零售礼包A方案"
             android:textColor="@color/hei"
             app:layout_constraintStart_toEndOf="@+id/img_tupian"
             app:layout_constraintTop_toTopOf="parent"
             />

       <TextView
           android:id="@+id/text_neirong"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="黑金魅惑蕾丝面膜5片/盒*20，温柔高保湿洁面乳(30g)*20，因诗美菁纯赋活原生水*12，贵族美学*1，油纸*10，标贴*10，手提袋*10"
           app:layout_constraintLeft_toLeftOf="@+id/text_biaoti"
           app:layout_constraintTop_toBottomOf="@+id/text_biaoti"

           />
          <TextView
              android:id="@+id/text_qian"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="3600"
              android:textColor="@color/orange"
              app:layout_constraintTop_toBottomOf="@+id/text_neirong"
              app:layout_constraintStart_toStartOf="@+id/text_biaoti"
              />
     </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
       app:layout_constraintBottom_toBottomOf="@+id/con_buju"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/text_num"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text_shuliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共1件商品"
        android:textColor="@color/hei"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text_heji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合计：3600"
        android:textColor="@color/hei"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/text_heji"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text_quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sibian_bai_bg6"
        app:layout_constraintEnd_toStartOf="@+id/text_zhifu"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:text="取消订单"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text_zhifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即支付"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:background="@drawable/shape_sibian_huang_bg1"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


