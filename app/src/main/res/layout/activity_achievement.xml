<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.cuci.enticement.widget.SmoothScrollview
        android:id="@+id/scroll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_toubu"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:descendantFocusability="blocksDescendants"
            >
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/web_guize"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/web_guize"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="上月回购"
            android:textColor="@color/hei"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/text_weidabiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="未达标"
            android:textColor="@color/orange"
            android:textSize="13sp"
            />
       <View
           android:id="@+id/line1"
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@drawable/shape_login_edit_bottom_line"
           app:layout_constraintTop_toBottomOf="@+id/text_weidabiao"
           android:layout_marginTop="10dp"
           />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/con_1"
        >
        <TextView
            android:id="@+id/text_kelingqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="上月可领礼品"
            android:textColor="@color/hei"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/text_weidabiao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/text_kelingqu"
           app:layout_constraintBottom_toBottomOf="@+id/text_kelingqu"
           app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:text="-"
            android:textColor="@color/orange"
            android:textSize="13sp"

            />
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/text_kelingqu"
            android:layout_marginTop="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/con_2"

        >
        <TextView
            android:id="@+id/text_fafang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="礼品发放状态"
            android:textColor="@color/hei"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/text_weidabiao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/text_fafang"
            app:layout_constraintBottom_toBottomOf="@+id/text_fafang"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:text="-"
            android:textColor="@color/orange"
            android:textSize="13sp"
            />
        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/text_fafang"
            android:layout_marginTop="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_dibu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/con_3"
        android:visibility="visible"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/text_dizi"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:hint="请添加收货地址"
            android:drawableLeft="@drawable/nodizi"
            android:drawablePadding="4dp"
            android:textSize="18sp"
            android:gravity="center|left"
            android:textColor="#595757"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:id="@+id/text_address"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:drawableRight="@drawable/youjiantou"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:textColor="#595757"


            tools:text="adlksfjakfjaskfjakdsfjakfjakjf\nlakjdfaklfakdfjalkfjakfakldfjalkjakasdf\nlakjdfaklfakdfjalkfjakfakldfjalkjakasdf"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            />
        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintBottom_toBottomOf="@id/con_4"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/text_shanchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看物流"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_dizhi_bg1"
        app:layout_constraintTop_toBottomOf="@id/con_4"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存地址"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_dizhi_bg1"
        app:layout_constraintTop_toBottomOf="@id/con_4"
        app:layout_constraintEnd_toStartOf="@+id/text_shanchu"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    </com.cuci.enticement.widget.SmoothScrollview>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_toubu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/text_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的福利"
            android:textColor="@color/hei"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>