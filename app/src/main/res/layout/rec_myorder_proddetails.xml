<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toTopOf="parent"
        />
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/con_buju"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/line"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:padding="10dp"
       >
      <ImageView
          android:id="@+id/img_tupian"
          android:layout_width="0dp"
          android:layout_height="100dp"
          app:layout_constraintDimensionRatio="1:1"
          tools:src="@mipmap/ic_launcher"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:paddingRight="5dp"
          />

         <TextView
             android:id="@+id/text_biaoti"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="新零售礼包A方案"
             android:textColor="@color/hei"
             app:layout_constraintStart_toEndOf="@+id/img_tupian"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginStart="6dp"
             />

       <TextView
           android:id="@+id/text_neirong"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           tools:text="油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10"
           android:maxLines="3"
           android:ellipsize="end"
           android:textSize="11sp"
           app:layout_constraintLeft_toLeftOf="@+id/text_biaoti"
           app:layout_constraintTop_toTopOf="@id/img_tupian"
           app:layout_constraintBottom_toBottomOf="@id/img_tupian"
           app:layout_constraintRight_toLeftOf="@+id/text_num"
           />
          <TextView
              android:id="@+id/tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="¥"
              android:textColor="@color/orange"
              android:textSize="11sp"
              app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
              app:layout_constraintStart_toStartOf="@+id/text_biaoti"
              />
          <TextView
              android:id="@+id/text_qian"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="3600"
              android:textSize="16sp"
              android:layout_marginStart="1dp"
              android:textColor="@color/orange"
              app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
              app:layout_constraintStart_toEndOf="@id/tv"
              />

       <TextView
           android:id="@+id/text_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="x1"
           app:layout_constraintBottom_toBottomOf="@+id/text_qian"
           app:layout_constraintEnd_toEndOf="parent"

           />
      <!-- <TextView
           android:id="@+id/text_tuikuan"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="退款"
           android:textSize="12sp"
           android:textColor="@color/colorWhite"
           android:background="@drawable/shape_dizhi_bg1"
          app:layout_constraintTop_toTopOf="@+id/text_qian"
           app:layout_constraintEnd_toEndOf="parent"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           />-->
     </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>


