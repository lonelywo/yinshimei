<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/colorWhite"
    >



  <TextView
      android:id="@+id/text_bianhao"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="订单编号：668114055490"
      android:textColor="@color/hei"
      android:textSize="13sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/text_fuzhi"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="复制"
      android:textSize="13sp"
      android:background="@drawable/shape_myorder_title_fuzhi"
      android:layout_marginLeft="5dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@+id/text_bianhao"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      />
  <TextView
      android:id="@+id/text_zhuangtai"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="已取消"
      android:textSize="13sp"
      android:textColor="@color/home_huang"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>


