<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    >



<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/con_toubu"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#f7f7f7"
    >
    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jiantou_hei"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="6dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="订单确认"
    android:textSize="20sp"
    android:textColor="@color/hei"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>
    <com.cuci.enticement.widget.SmoothScrollview
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/con_toubu"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_zhongjian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
     <TextView
         android:id="@+id/text_dizi"
         android:layout_width="wrap_content"
         android:layout_height="80dp"
         android:hint="请添加收货地址"
         android:drawableLeft="@drawable/nodizi"
         android:drawablePadding="4dp"
         android:textSize="18sp"
         android:gravity="center"
         android:textColor="#595757"
         android:visibility="gone"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"

         />
        <TextView
            android:id="@+id/text_address"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:drawableRight="@drawable/youjiantou"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:textColor="#595757"
            android:paddingTop="12dp"
            tools:text="adlksfjakfjaskfjakdsfjakfjakjf\nlakjdfaklfakdfjalkfjakfakldfjalkjakasdf\nlakjdfaklfakdfjalkfjakfakldfjalkjakasdf"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/line_gray"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_buju"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/img_tupian"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/text_biaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新零售礼包A方案"
                android:textColor="@color/hei"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/img_tupian"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="6dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/text_neirong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="默认"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#626262"
                app:layout_constraintLeft_toLeftOf="@+id/text_biaoti"
                app:layout_constraintBottom_toBottomOf="@id/img_tupian"
                app:layout_constraintRight_toLeftOf="@+id/text_qian"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/text_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3600"
                android:textSize="13sp"
                android:layout_marginStart="1dp"
                android:textColor="@color/hei"
                app:layout_constraintTop_toTopOf="@+id/text_biaoti"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/text_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textSize="12sp"
                android:textColor="@color/hei"
                app:layout_constraintBottom_toBottomOf="@+id/text_neirong"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.cuci.enticement.widget.SmoothScrollview>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/true_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:text="立即兑换"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/home_huang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf ="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv1"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            android:layout_marginLeft="4dp"
            android:textSize="16sp"
            android:textColor="@color/home_huang"
            tools:text="2000积分"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
