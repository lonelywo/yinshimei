<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        >
        <TextView
            android:id="@+id/image_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址编辑"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_back"
            app:layout_constraintBottom_toBottomOf="@id/image_back"
            />

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp"
            android:src="@drawable/icon_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_zhongjian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_title"
        android:layout_marginTop="24dp"
        android:background="@color/colorWhite"
    >

        <TextView
            android:id="@+id/text_xingming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="姓名"
            android:textColor="@color/hei"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@+id/viem_line"
            />
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:hint="请输入收货人姓名"
            android:inputType="text"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="15sp"
            android:layout_marginLeft="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_xingming"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            />

        <View
            android:id="@+id/viem_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/text_xingming"
            android:layout_marginTop="24dp"
            />
        <com.cuci.enticement.widget.ClearEditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#C6C6C6"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="@+id/edt_name"
            app:layout_constraintTop_toBottomOf="@+id/viem_line"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/text_shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="手机号"
            android:textColor="@color/hei"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/viem_line"
            app:layout_constraintStart_toStartOf="parent"
            />
        <View
            android:id="@+id/viem_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/text_shoujihao"
            android:layout_marginTop="20dp"
            />

    <TextView
        android:id="@+id/text_dizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        android:textColor="@color/hei"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viem_line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="请选择 省份 市县 区域"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/edt_name"
        app:layout_constraintTop_toBottomOf="@+id/viem_line1"/>

        <ImageView
            android:id="@+id/img_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/youjiantou"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viem_line1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_code"
        android:layout_marginTop="10dp"
        />

        <EditText
            android:id="@+id/edt_xiangxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:hint="请填写详细地址"
            android:maxLines="3"
            android:text=""

            android:textColor="#C6C6C6"
            android:textSize="15sp"
            android:gravity="top"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/edt_name"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            android:layout_marginRight="20dp"
            />

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shape_login_edit_bottom_line"
            app:layout_constraintTop_toBottomOf="@+id/edt_xiangxi"
            android:layout_marginTop="20dp"
            />
    <TextView
        android:id="@+id/text_morendizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设为默认地址"
        android:textColor="@color/hei"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line2"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="20dp"
        />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noxuanzhong"
            android:textColor="@color/hei"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view_line2"
            app:layout_constraintEnd_toEndOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_sibian_huang_bg1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_zhongjian"/>

</androidx.constraintlayout.widget.ConstraintLayout>