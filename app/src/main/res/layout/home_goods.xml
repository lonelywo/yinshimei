 </androidx.constraintlayout.widget.ConstraintLayout>-->
        <TextView
            android:id="@+id/text_home_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="价格"
            app:layout_constraintTop_toBottomOf="@+id/text_home_goodsname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            android:textColor="@color/hei"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/text_home_money_vip"
            android:layout_width="0dp"
            android:layout_height="44dp"
            tools:text="价格"
            app:layout_constraintTop_toBottomOf="@+id/text_home_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            android:textColor="@color/hei"
            android:background="@drawable/shape_home_money_bg"
            android:padding="10dp"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>