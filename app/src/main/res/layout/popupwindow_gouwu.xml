<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/con_quanju"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
     <ImageView
         android:id="@+id/img_tuxiang"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         tools:src="@mipmap/ic_launcher"
         app:layout_constraintLeft_toLeftOf="@+id/con_quanju"
         app:layout_constraintTop_toTopOf="@+id/con_quanju"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"

         />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="3660.00"
           android:textColor="@color/orange"
           android:textSize="20sp"
           app:layout_constraintTop_toTopOf="@+id/img_tuxiang"
           app:layout_constraintLeft_toRightOf="@+id/img_tuxiang"
           android:layout_marginLeft="50dp"
           />
       <TextView
           android:id="@+id/stock_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="库存10000件"
           android:textSize="15sp"
           app:layout_constraintBottom_toBottomOf="@+id/img_tuxiang"
           app:layout_constraintLeft_toRightOf="@+id/img_tuxiang"
           android:layout_marginLeft="50dp"
           />

       <TextView
           android:id="@+id/selected_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/stock_tv"
           app:layout_constraintLeft_toLeftOf="@+id/stock_tv"
           tools:text="已选黑金魅惑蕾丝面膜5片"
           android:textColor="#595757"
           android:layout_marginTop="8dp"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/youjiantou"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            />
          <TextView
              android:id="@+id/text_fenzu"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/img_tuxiang"
              app:layout_constraintLeft_toLeftOf="@+id/img_tuxiang"
              android:layout_marginTop="50dp"
              android:text="默认分组"
              android:textSize="15sp"
              android:textColor="#000000"
              />
       <RadioGroup
           android:id="@+id/rgp_button"
           app:layout_constraintTop_toBottomOf="@+id/text_fenzu"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <RadioButton
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="黑金魅惑蕾丝面膜5片/盒*20，温柔高保湿洁面乳(30g)*20，因诗美菁纯赋活原生水*12，贵族美学*1，油纸*10，标贴*10，手提袋*10"
               android:layout_margin="15dp"
               android:background="@drawable/shape_popup_button_bg"
               android:padding="10dp"
               android:button="@null"
               />
           <RadioButton
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="黑金魅惑蕾丝面膜5片/盒*20，温柔高保湿洁面乳(30g)*20，因诗美菁纯赋活原生水*12，贵族美学*1，油纸*10，标贴*10，手提袋*10"
               android:layout_margin="15dp"
               android:background="@drawable/shape_popup_button_bg"
               android:padding="10dp"
               android:button="@null"
           />

       </RadioGroup>
       <TextView
           android:id="@+id/text_shuliang"
           app:layout_constraintLeft_toLeftOf="@+id/img_tuxiang"
           app:layout_constraintTop_toBottomOf="@+id/rgp_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="购买数量"
           android:textColor="#000000"
           android:textSize="15sp"
           />
         <TextView
             android:id="@+id/text_jia"
             app:layout_constraintBottom_toBottomOf="@+id/text_shuliang"
             app:layout_constraintTop_toTopOf="@+id/text_shuliang"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="+"
             android:layout_marginRight="10dp"
             />
         <TextView
             android:id="@+id/text_shuzi"
             app:layout_constraintBottom_toBottomOf="@+id/text_shuliang"
             app:layout_constraintTop_toTopOf="@+id/text_shuliang"
             app:layout_constraintRight_toLeftOf="@+id/text_jia"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="10"
             android:layout_marginRight="10dp"
             />
       <TextView
           app:layout_constraintBottom_toBottomOf="@+id/text_shuliang"
           app:layout_constraintTop_toTopOf="@+id/text_shuliang"
           app:layout_constraintRight_toLeftOf="@+id/text_shuzi"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="-"
           android:layout_marginRight="10dp"
           />
       <Button
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_margin="10dp"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="确定"
           android:textSize="20sp"
           android:textColor="#ffffff"
           android:background="@drawable/shape_sibian_huang_bg1"
           />


   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>