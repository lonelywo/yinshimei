<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

 <androidx.constraintlayout.widget.ConstraintLayout
     android:id="@+id/con_toubu"
     android:layout_width="match_parent"
     android:layout_height="65dp"
     app:layout_constraintTop_toTopOf="parent"
     >
     <ImageView
         android:id="@+id/img_back"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/icon_back"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginLeft="20dp"
         android:padding="5dp"
         />
     <TextView
         android:id="@+id/text_biaoti"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="我的美粉"
         android:textColor="@color/hei"
         android:textSize="20sp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         />
 </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_zhongbu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/con_toubu"
        android:background="@color/orange"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:src="@drawable/beijingtu_wode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            android:paddingBottom="100dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_tuxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tuxiang"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#E2C08D"
            />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="美美"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/civ_tuxiang"
            app:layout_constraintBottom_toBottomOf="@+id/civ_tuxiang"
            app:layout_constraintLeft_toRightOf="@+id/civ_tuxiang"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintRight_toRightOf="parent"
            android:singleLine="true"
            android:ellipsize = "end"
            />
      <LinearLayout
          android:id="@+id/ll_shuzi"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintBottom_toTopOf="@+id/ll_wenzi"
          >
          <TextView
              android:id="@+id/text_zhongrenshu"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/colorWhite"
              android:textSize="20sp"
              android:gravity="center"
              android:layout_marginTop="10dp"
              />
          <TextView
              android:id="@+id/text_xinzengrenshu"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/colorWhite"
              android:textSize="20sp"
              android:gravity="center"
              android:layout_marginTop="10dp"
              />
          <TextView
              android:id="@+id/text_rzengrenshu"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/colorWhite"
              android:textSize="20sp"
              android:gravity="center"
              android:layout_marginTop="10dp"
              />

      </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wenzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="40dp"
            >
            <TextView
                android:id="@+id/text_zhongrenshu1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="累计总美粉"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_xinzengrenshu1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="本月新增美粉"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/text_xinzengrenshu"
                android:layout_marginTop="2dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_rzengrenshu1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="今日新增美粉"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                />


        </LinearLayout>
