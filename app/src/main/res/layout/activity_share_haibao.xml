<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_img"
        android:layout_width="750px"
        android:layout_height="1334px"
        android:layout_marginStart="8px"
        android:layout_marginTop="8px"
        android:layout_marginEnd="8px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/img_tupian"
            android:layout_width="750px"
            android:layout_height="1334px"
            tools:src="@drawable/poster"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="皮蛋君"
            android:textSize="30px"
            android:textColor="@color/hei"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
            app:layout_constraintLeft_toLeftOf="@+id/img_tupian"
            android:layout_marginBottom="160px"
            android:layout_marginLeft="70px"
            />
        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="155px"
            android:layout_height="155px"
            tools:src="@drawable/tuxiang"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
            app:layout_constraintRight_toRightOf="@+id/img_tupian"
            android:scaleType="centerCrop"
            android:layout_marginRight="57px"
            android:layout_marginBottom="43px"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>