<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_toubu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择服务类型"
            android:textColor="@color/hei"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_buju"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/con_toubu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/img_tupian"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintDimensionRatio="1:1"
            tools:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingRight="5dp"
            />

        <TextView
            android:id="@+id/text_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新零售礼包A方案"
            android:textColor="@color/hei"
            app:layout_constraintStart_toEndOf="@+id/img_tupian"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="6dp"
            />

        <TextView
            android:id="@+id/text_neirong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10油纸*10，标贴*10，手提袋*10"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="@+id/text_biaoti"
            app:layout_constraintTop_toTopOf="@id/img_tupian"
            app:layout_constraintBottom_toBottomOf="@id/img_tupian"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/orange"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
            app:layout_constraintStart_toStartOf="@+id/text_biaoti"
            />
        <TextView
            android:id="@+id/text_qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3600"
            android:textSize="16sp"
            android:layout_marginStart="1dp"
            android:textColor="@color/orange"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"
            app:layout_constraintStart_toEndOf="@id/tv"
            />

        <TextView
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="x1"
            app:layout_constraintBottom_toBottomOf="@+id/img_tupian"

            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_tuikuan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/con_buju"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        >
    <ImageView
        android:id="@+id/img_tuxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/tui_money"
        android:layout_marginLeft="10dp"
        />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintLeft_toRightOf="@+id/img_tuxiang"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       >
    <TextView
        android:id="@+id/text_wenzi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="仅退款"
        android:textSize="12sp"
        android:textColor="@color/hei"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toLeftOf="@+id/text_money"
        />
    <TextView
        android:id="@+id/text_wenzi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="未收到货（包含未签收），或已联系客服同意情况下"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"/>
   </LinearLayout>
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_tuxiang"
        app:layout_constraintBottom_toBottomOf="@+id/img_tuxiang"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/youjiantou"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_login_edit_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/con_tuikuan1"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_tuikuan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:background="@color/colorWhite"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/img_tuxiang1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/tui_goods"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/img_tuxiang1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:id="@+id/text_wenzi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退货退款"
                android:textSize="12sp"
                android:textColor="@color/hei"
                android:layout_marginLeft="10dp"
                app:layout_constraintRight_toLeftOf="@+id/text_money"
                />
            <TextView
                android:id="@+id/text_wenzi4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已收到货，需要退还已收到的货物"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/img_tuxiang1"
            app:layout_constraintBottom_toBottomOf="@+id/img_tuxiang1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/youjiantou"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

 <TextView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     app:layout_constraintTop_toBottomOf="@+id/con_tuikuan2"
     app:layout_constraintBottom_toBottomOf="parent"
     android:layout_marginTop="10dp"
     android:background="@color/colorWhite"
     />

</androidx.constraintlayout.widget.ConstraintLayout>