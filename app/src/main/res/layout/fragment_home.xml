<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:fitsSystemWindows="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

     <com.scwang.smartrefresh.layout.SmartRefreshLayout
         android:id="@+id/refresh_home"
        app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_width="0dp"
         android:layout_height="0dp"
         >
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/rec_goods"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             />
         <com.scwang.smartrefresh.layout.footer.ClassicsFooter
             android:layout_width="match_parent"
             android:layout_height="48dp"
             app:srlAccentColor="#888"
             app:srlClassicsSpinnerStyle="Translate"
             app:srlDrawableProgress="@drawable/ic_index_dashboard"
             app:srlTextSizeTitle="12sp"/>
     </com.scwang.smartrefresh.layout.SmartRefreshLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/con_dingbu"
       android:layout_width="42dp"
       android:layout_height="42dp"
       android:layout_marginBottom="20dp"
       android:layout_marginRight="20dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       >
      <View
          android:id="@+id/view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/shape_home_dingbu_bg"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          />

  <ImageView
      android:id="@+id/img_dingbu"
      android:layout_width="14dp"
      android:layout_height="25dp"
      android:src="@drawable/dingbu"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"

      />
   </androidx.constraintlayout.widget.ConstraintLayout>
      <ImageView
          android:id="@+id/flot"
          android:layout_width="56dp"
          android:layout_height="86dp"
          android:src="@drawable/flot"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="123dp"
          android:layout_marginRight="20dp"
          android:scaleType="centerCrop"
          />

  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>