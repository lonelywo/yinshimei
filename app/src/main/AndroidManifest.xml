<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cuci.enticement">

    <application
        android:name=".BasicApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_test"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="label,allowBackup"
        tools:targetApi="n">

        <meta-data
            android:name="com.cuci.enticement.cache.GlideConfiguration"
            android:value="GlideModule" />
        <activity android:name=".plate.home.activity.ProdActivity"></activity>
        <activity android:name=".plate.mine.activity.MyOrderActivity"></activity>
        <activity android:name=".plate.common.LoginActivity"></activity>
        <activity android:name=".plate.common.RegisterActivity"></activity>
        <activity android:name=".plate.cart.activity.OrderActivity"/>
        <activity android:name=".plate.cart.activity.OrderDetailsActivity"/>
        <activity android:name=".plate.mine.activity.ZengAddressActivity"/>
        <activity android:name=".plate.common.BindPhoneActivity"/>
        <activity android:name=".plate.mine.activity.CommissionActivity"/>
        <activity android:name=".plate.mine.activity.MyTeamActivity"/>
        <activity android:name=".plate.mine.activity.AchievementActivity"/>
        <activity android:name=".plate.mine.activity.KeFuActivity"/>
        <activity android:name=".plate.mine.activity.CashActivity"/>
        <activity android:name=".plate.mine.activity.CashMXActivity"/>
        <activity android:name=".plate.mine.activity.RecAddressActivity"/>
        <activity android:name=".plate.mine.activity.MyTeamTwoActivity"/>
        <activity android:name=".plate.mall.activity.YuLanActivity"/>
        <activity android:name=".plate.cart.activity.LogisticsActivity"/>
        <activity
            android:name=".plate.common.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />





        <activity android:name=".plate.common.LauncherActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 微信SDK -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:label="@string/app_name_test"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="true"
            android:taskAffinity="net.sourceforge.simcpux"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop"/>

    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>